package e105;

import java.util.Scanner;

public class Main
{

	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		String[] dias = {"MARTES", "MIERCOLES", "JUEVES", "VIERNES", "SABADO", "DOMINGO"};

		float totalRecaudacion;
		float min;
		float max;
		float recaudacion = 0;

		while(recaudacion != -1)
		{
			totalRecaudacion = 0;
			recaudacion = sc.nextFloat();
			if(recaudacion != -1)
			{

				totalRecaudacion += recaudacion;
				max = recaudacion;
				min = recaudacion;
				for (int i = 0; i < 5; i++)
				{
					if(recaudacion > max)
					{
						max = recaudacion;
					}
					if(recaudacion < min)
					{
						min = recaudacion;
					}
					totalRecaudacion += recaudacion;
					recaudacion = sc.nextFloat();

				}
				System.out.println(max + " " + min + " " + totalRecaudacion);
			}
		}

	}

}

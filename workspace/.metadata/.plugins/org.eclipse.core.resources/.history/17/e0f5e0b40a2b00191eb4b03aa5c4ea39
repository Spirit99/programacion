package alumnos;

import java.util.Scanner;

public class Main
{

	public static Alumnos alumnos;

	public static void main(String[] args)
	{

		alumnos = new Alumnos(5);
		Scanner sc = new Scanner(System.in);
		String opcion = "";
		while(!opcion.equals("6"))
		{
			mostrarMenu();
			opcion = sc.nextLine();
			switch(opcion)
			{
				case "1":
					listarAlumnos();
					break;

			}
		}

	}

	private static void listarAlumnos()
	{
		Alumno[] alums = alumnos.getAlumnos();
		System.out.println("Nombre\t1ev\t2ev\t3ev");
		for (int i = 0; i < alums.length; i++)
		{
			System.out.println(alums[i].getNombre() +
					"\t" + alums[i].getNota(1) +
					"\t" + alums[i].getNota(2) +
					"\t" + alums[i].getNota(3));
		}
	}

	private static void mostrarMenu()
	{
		System.out.println("Opciones\n" +
			"1.- Listar alumnos.\n" +
			"2.- Añadir alumno. (No se permitirán nombres repetidos)\n" +
			"3.- Eliminar alumno.\n" +
			"4.- Poner nota. (Se pedirá nombre de alumno, evaluación y nota)" +
			"5.- Borrar nota. (Se pedirá nombre de alumno y evaluación)" +
			"6.- Salir.");
	}

}

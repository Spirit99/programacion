package palabras;

import java.util.Scanner;

public class Main
{

	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		String opcion = "0";
		while(!opcion.equals("7"))
		{
			mostrarMenu();
			opcion = sc.nextLine();
			switch(opcion)
			{
				case "1":
				break;
				case "2":
				break;
				case "3":
				break;
				case "4":
				break;
				case "5":
				break;
				case "6":
				break;
				case "7":
				break;

			}
		}
		sc.close();


	}

	private static void mostrarMenu()
	{
		System.out.println("Opciones\n" +
		"1.-Introducir palabra\n" +
		"2.-Listar palabras\n" +
		"3.-Eliminar palabra\n" +
		"4.-Borrar todas\n" +
		"5.-Mostrar tama√±o\n" +
		"6.-Buscar\n" +
		"7.-Salir\n");
	}

}

package e474;

import java.util.Scanner;

public class Main
{

	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		int casos = sc.nextInt();
		int s, a, b;
		int distancia = 0;

		int distancia1 = 0;
		int distancia2 = 0;


		for (int i = 0; i < casos; i++)
		{

			s = sc.nextInt();
			a = sc.nextInt();
			b = sc.nextInt();

			if(s == menor(a, b, s))
			{
				distancia = mayor(a, b) - s;
			}
			else if(s == mayor(a, b, s))
			{
				distancia = s - menor(a, b);
			}
			else // S estÃ¡ en el medio
			{
				distancia1 = s - menor(a, b);
				distancia2 = mayor(a, b) - s;
				distancia = menor(distancia1, distancia2) * 2 + mayor(distancia1, distancia2);
			}

			System.out.println(distancia);
		}
		sc.close();
	}

	public static int menor(int a, int b)
	{
		if(a <= b)
		{
			return a;
		}
		else
		{
			return b;
		}
	}

	public static int menor(int a, int b, int c)
	{
		if(a <= b && a <= c)
		{
			return a;
		}
		else if(b <= a && b <= c)
		{
			return b;
		}
		else
		{
			return c;
		}
	}

	public static int mayor(int a, int b)
	{
		if(a >= b)
		{
			return a;
		}
		else
		{
			return b;
		}
	}

	public static int mayor(int a, int b, int c)
	{
		if(a >= b && a >= c)
		{
			return a;
		}
		else if(b >= a && b >= c)
		{
			return b;
		}
		else
		{
			return c;
		}
	}
}

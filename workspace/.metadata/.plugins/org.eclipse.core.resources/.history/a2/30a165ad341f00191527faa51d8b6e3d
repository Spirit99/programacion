package nombres;

public class Nombres
{
	private String[] nombres;
	private int cont = 0;

	public Nombres(int tamaño)
	{
		nombres = new String[tamaño];
	}

	public boolean anadir(String nombre)
	{
		if(nombres.length == cont)
		{
			return false;
		}

		for (int i = 0; i < cont; i++)
		{
			if(nombre.equalsIgnoreCase(nombres[i]))
			{
				return false;
			}
		}

		nombres[cont] = nombre;
		cont++;
		return true;
	}

	public boolean eliminar(String nombre)
	{
		boolean encontrado = false;
		int iEliminar = -1;
		for (int i = 0; i < cont && !encontrado; i++)
		{
			if(nombre.equalsIgnoreCase(nombres[i]))
			{
				encontrado = false;
				iEliminar = i;
			}
		}
		if(encontrado)
		{
			for (int i = iEliminar; i < cont - 1; i++)
			{
				nombres[i] = nombres[i + 1];
			}
			cont--;
		}
		return encontrado;
	}

	public void vaciar()
	{

	}

	public String getNombre(int posicion)
	{
		return null;
	}

	public int getNumeroNombres()
	{
		return 0;
	}

	public int getCapacidad()
	{
		return 0;
	}

	public boolean estaLlena()
	{
		return false;
	}

	public boolean buscarNombre(String nombre)
	{
		return false;
	}


}
